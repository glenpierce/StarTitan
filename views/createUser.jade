doctype html
html
    head
        title Create User
        link(rel='stylesheet', href='/stylesheets/style.css')

body
    block content

    div(style="display:flex; align-items:center; width:100%; padding-bottom:20px;")
        img(src="/images/averagestar.png" style="margin:auto; height:400px;")

    div(style="max-width:400px; text-align:center; padding-bottom:20px; margin:auto;")
        div(style="display:inline;") Please create a new user below. If you would like more information, please return to our&nbsp;
        div(style="display:inline; cursor:pointer;" onclick="window.location='/index'") <u>home page</u>

    form(id="emailForm" name="emailForm", method="post" onsubmit="submitForm()" style="display:flex; flex-direction:column; align-items:center; width:100%; padding-bottom:20px;")
        div(style="display:flex; align-items:center; width:100%; padding-bottom:5px;")
            div(style="margin:auto; width:300px;")
                div(style="display:inline-block; margin-top:4px;") Username
                input(name="alias" style="display:inline; float:right;" class="input" type="text")
        div(style="display:flex; align-items:center; width:100%; padding-bottom:5px;")
            div(style="margin:auto; width:300px;")
                div(style="display:inline-block; margin-top:4px;") Email
                input(name="username" style="display:inline; float:right;" class="input" type="text")
        div(style="display:flex; align-items:center; width:100%; padding-bottom:5px;")
            div(style="margin:auto; width:300px;")
                div(style="display:inline-block; margin-top:4px;") Password
                input(name="password" style="display:inline; float:right;" class="input" type="password")
        div(style="display:flex; align-items:center; width:100%; padding-bottom:5px;")
            div(style="margin:auto; width:300px;")
                div(style="display:inline-block; margin-top:4px;") Verify Password
                input(name="verifyPassword" style="display:inline; float:right;" class="input" type="password")
        div(style="display:flex; align-items:center; width:100%; margin-bottom:20px;")
            div(class="g-recaptcha" data-sitekey="6LfgLSMUAAAAABRJzT1aYJTLTKHEc7zorV0nRPxm" style="margin:auto;")
        input(type="submit" value="Create User" style="cursor:pointer; margin:auto;" class="border input")